{
  "manifest_version": 3,
  "name": "GlobeMed Referral Helper",
  "version": "3.3",
  "description": "GM referral acceptance",
  "minimum_chrome_version": "116",
  "host_permissions": [
    "https://referralprogram.globemedsaudi.com/*",
    "wss://localhost:8443/*"
  ],
  "permissions": ["activeTab", "tabs", "alarms", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://referralprogram.globemedsaudi.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ]
}
